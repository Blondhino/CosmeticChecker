<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="5dp"
    android:background="#f2f2f2"
    >
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

  <ImageView
      android:id="@+id/ivProduct"
      android:layout_marginLeft="5dp"
      android:layout_marginTop="5dp"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@color/colorPrimaryDark"
      />

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivProduct"
            android:layout_marginLeft="5dp"
            android:text="Maybelline some product title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/someText1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductName"
            android:layout_toRightOf="@id/ivProduct"
            android:text="Rating: "
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/tvProductRating"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/someText1"
            android:layout_below="@id/tvProductName"
            android:text="askld"
            />

        <TextView
            android:id="@+id/someText2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvProductRating"
            android:layout_below="@id/tvProductName"
            android:layout_marginStart="15dp"
            android:text="Price: "
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductName"
            android:layout_toRightOf="@id/someText2"
            android:text="adslfj "

            />

        <TextView
            android:id="@+id/someText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivProduct"
            android:layout_marginTop="5dp"
            android:text="Description:"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/someText3"

            />

    </RelativeLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>